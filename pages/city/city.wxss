/* pages/city/city.wxss */
.search-wrap{
    width: 100%;
    padding:24rpx;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 40;
}
.search-box{
    border:1px solid #ccc;
    border-radius: 10rpx;
    position: relative;
    background-color: #fff;
    overflow: hidden;
}
.search{
    width: 78rpx;
    height: 90rpx;
    background:url(data:image/png;base64,) no-repeat 20rpx 27rpx;
    background-size: 38rpx auto;
    float: left;
}
.search-box input{
    height: 90rpx;
    color: #bcbcbc;
    font-size: 30rpx;
    line-height: 90rpx;
}
.placeholder{
    font-size: 30rpx;
    color: #bbb;
    line-height: 90rpx;
}
.scroll-wrap{
  width: 100%;
  height: 100%;
  /*padding-top: 140rpx;*/
  display: flex;
  flex-direction: column;
  align-content: stretch;
}
.scroll-wrap scroll-view{
  height: 100%;
}
.hotcity,.item_city,.item_letter,.hot-grid,.gps,.gps_city{
  display: flex;
  background-color: #fff;
  height: 90rpx;
  padding-left: 50rpx;
  align-items: center;
}
.hot-grids{
  margin-bottom: 25rpx;
  box-shadow: 0 1rpx 1rpx rgba(217,217,217,0.8);
}
.hotcity,.item_letter,.gps{
  font-size: 32rpx;
  color: #666;
  border-bottom: 1px solid rgba(217,217,217,0.8);
  margin-top:30rpx;
}
.item_city,.hot-grid,.gps_city{
  font-size: 30rpx;
   height: 80rpx;
   color: #333;
}
.gps_city{margin-bottom: 25rpx;}
.searchLetter {
  position:fixed;
  right:0rpx;
  top:50rpx;
  width:100rpx;
  text-align:center;
  justify-content:center;
  display:flex;
  flex-direction:column;
  color:#b2b2b2;
  z-index:41;
}
.thishotText {
  width: 100%;
  height: 44rpx;
}
.thishotText .hot-icn,
.thishotText .loc-icn{
  height: 100%;
}
.hot-icn{
  background:url(data:image/png;base64,) no-repeat center center;
  background-size: 22% auto;
}
.loc-icn{
   background:url(data:image/png;base64,) no-repeat center center;
  background-size: 22% auto;
}
.letter-text{
  color:#999;
  font-size:24rpx;
  line-height:40rpx;
}

.showSlectedLetter{
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

