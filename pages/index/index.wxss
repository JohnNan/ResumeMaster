/**index.wxss**/
page{
    background-color: #fff;
}
.container{
    height: 100%;
    }
navigator{
    width:100%;
    height: 100%;
}
.scroll-wrap{
    width:100%;
    position: fixed;
    left: 0;
    bottom:0;
    z-index: 10;
    height:332rpx;
}
.content{
    font-size:0;
    overflow-x:auto;
    white-space: nowrap;
    background-color:rgba(221,221,221,0.9);
    padding-top: 16rpx;
    text-align: left;
}
.template-item{
  display: inline-block;
  margin-left: 20rpx;
}
.template-item .template{
    width: 183rpx;
    height: 254rpx;
    padding: 4rpx;
    background-color: transparent;
}
.template-item .template-select{background-color: #ef6461;}
.txt-item{
    display: block;
    text-align: center;
    height: 40rpx;
    color: #333;
    font-size:26rpx;
    line-height: 40rpx;
    margin:12rpx 0;
}
.txt-select{
    color: #fff;
    background-color: #ef6461;
}

.hide{
    display: none;
}

.circle{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
    box-shadow:0 4rpx 10rpx rgba(211,50,46,0.5);
    background-color: #ef6461;
    position: fixed;
    right: 45rpx;
    bottom: 377rpx;
    z-index: 90;
}
.close{
    width:100rpx;
    height: 100rpx;
    background:url(data:image/png;base64,) no-repeat center center;
    background-size: 46rpx auto;
}
